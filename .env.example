# ===========================================
# TWITCH BOT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# --- Twitch API Credentials ---
# Get these from https://dev.twitch.tv/console
# 1. Go to https://dev.twitch.tv/console/apps
# 2. Click "Register Your Application"
# 3. Set OAuth Redirect URL to http://localhost:3000
# 4. Copy Client ID and generate a Client Secret
TWITCH_CLIENT_ID=your_client_id_here
TWITCH_CLIENT_SECRET=your_client_secret_here

# --- Bot Authentication ---
# Generate at https://twitchtokengenerator.com/
# Required scopes: chat:read, chat:edit, channel:moderate, moderator:manage:banned_users
# Or use Twitch CLI: twitch token -u -s "chat:read chat:edit channel:moderate"
TWITCH_OAUTH_TOKEN=oauth:your_token_here
TWITCH_REFRESH_TOKEN=your_refresh_token_here

# --- Bot Settings ---
# The Twitch username of your bot account
TWITCH_BOT_NICK=your_bot_username

# Comma-separated list of channels to join (without #)
TWITCH_CHANNELS=channel1,channel2

# Command prefix (default: !)
BOT_PREFIX=!

# --- Owner Settings ---
# Your Twitch username (for owner-only commands)
BOT_OWNER=your_twitch_username

# --- Logging ---
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, leave empty for console only)
# Make sure the directory exists and is writable
LOG_FILE=

# --- Database (optional, for future features) ---
# SQLite example: sqlite:///data/bot.db
# PostgreSQL example: postgresql://user:pass@localhost/botdb
DATABASE_URL=sqlite:///data/bot.db

# --- Feature Flags ---
# Enable/disable command groups (true/false)
ENABLE_MODERATION=true
ENABLE_FUN_COMMANDS=true
ENABLE_INFO_COMMANDS=true
ENABLE_ADMIN_COMMANDS=true

# --- Rate Limiting ---
# Default cooldown between commands (seconds)
DEFAULT_COOLDOWN=3

# --- API Settings ---
# Timeout for API requests (seconds)
API_TIMEOUT=10
